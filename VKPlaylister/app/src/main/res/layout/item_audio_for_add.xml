<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:background="@color/defaultBackground"
    android:layout_margin="@dimen/extra_small_item_padding"
    card_view:cardBackgroundColor="@color/colorLightPrimary"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="1dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/audio_info"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />

        <ImageView
            android:id="@+id/add_audio"
            android:paddingRight="@dimen/small_margin"
            android:paddingLeft="@dimen/small_margin"
            android:layout_gravity="center_vertical"
            android:layout_width="@dimen/audio_item_button_padding_width"
            android:layout_height="match_parent"
            android:src="@drawable/ic_add_circle_white_48dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>